@model LindaEShop.Core.DTOs.RegisterViewModel
@{
	ViewData["Title"] = "ثبت نام کاربر";
}

<partial name="_Slider" />
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="title-section margin_bottom_17">
				<h2 class="title">
					عضویت در سایت
				</h2>
			</div><!-- /.title-section -->
		</div><!-- /.col-md-12 -->
	</div><!-- /.row -->
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2">
			<div class="wrap-contact">
				<form novalidate class="contact-form form-group form-control" method="post" asp-action="Register">
					<div class="form-text-wrap clearfix">
						<div class="form-group">
							<label class="form-control-label" asp-for="Name"></label>
							<input class="form-control margin-2" asp-for="Name" type="text" autofocus>
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label class="form-control-label" asp-for="Number"></label>
							<input class="form-control margin-2" asp-for="Number" type="text">
							<span asp-validation-for="Number" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label class="form-control-label" asp-for="Password"></label>
							<input class="form-control margin-2" asp-for="Password" type="password">
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label class="form-control-label" asp-for="RePassword"></label>
							<input class="form-control margin-2" asp-for="RePassword" type="password">
							<span asp-validation-for="RePassword" class="text-danger"></span>
						</div>
					</div>
					<div class="form-submit margin-top-32 ">
						<button class="btn btn-lg btn-login btn-block" type="submit">ثبت نام</button>
					</div>
				</form>
			</div><!-- /.wrap-contact -->
		</div>
	</div><!-- /.row -->
</div><!-- /.container -->
