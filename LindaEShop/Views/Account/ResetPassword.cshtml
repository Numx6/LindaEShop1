@model LindaEShop.Core.DTOs.ResetPasswordViewModel
@{
	ViewData["Title"] = "تغییر کلمه عبور";
}

<partial name="_Slider" />
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="title-section margin_bottom_17">
				<h2 class="title">
					تغییر کلمه عبور
				</h2>
			</div><!-- /.title-section -->
		</div><!-- /.col-md-12 -->
	</div><!-- /.row -->
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2">
			<div class="wrap-contact">
				<form novalidate class="contact-form form-group form-control" method="post" asp-action="ResetPassword">
					<div class="form-group">
						<div class="form-group">
							<label class="form-control-label">کد فعالسازی  دریافت شده در sms</label>
							<input class="form-control margin-2" asp-for="ActiveCode" type="text" autofocus>
							<span asp-validation-for="ActiveCode" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label class="form-control-label" asp-for="Password"></label>
							<input class="form-control margin-2" asp-for="Password" type="password">
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label class="form-control-label" asp-for="RePassword"></label>
							<input class="form-control margin-2" asp-for="RePassword" type="password">
							<span asp-validation-for="RePassword" class="text-danger"></span>
						</div>
					</div>
					<div class="form-submit margin-top-32 ">
						<button class="btn btn-lg btn-login btn-block" type="submit">ثبت نام</button>
					</div>
				</form>
			</div><!-- /.wrap-contact -->
		</div>
	</div><!-- /.row -->
</div><!-- /.container -->
