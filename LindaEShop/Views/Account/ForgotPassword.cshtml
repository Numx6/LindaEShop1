@model LindaEShop.Core.DTOs.ForgotPasswordViewModel
@{
	ViewData["Title"] = "بازیابی کلمه عبور";
}
<partial name="_Slider" />
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="title-section margin_bottom_17">
				<h2 class="title">بازیابی کلمه عبور</h2>
				<p class="form-signin-heading">برای بازیابی کلمه عبور شماره موبایل ثبت نام را وارد کنید. پس از ان پیامکی حاوی کد فعالسازی برای شما ارسال می شود.</p>
			</div><!-- /.title-section -->
		</div><!-- /.col-md-12 -->
	</div><!-- /.row -->
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2">
			<div class="wrap-contact">
				<form novalidate class="contact-form form-group form-control" method="post" asp-action="ForgotPassword">
					<div class="form-group">
						<div class="form-group">
							<label class="form-control-label" asp-for="Number"></label>
							<input class="form-control margin-2" asp-for="Number" type="text" autofocus>
							<span asp-validation-for="Number" class="text-danger"></span>
						</div>
					</div>
					<div class="form-submit margin-top-32 ">
						<button class="btn btn-lg btn-login btn-block" type="submit">بازیابی کلمه عبور</button>
					</div>
				</form>
			</div><!-- /.wrap-contact -->
		</div>
	</div><!-- /.row -->
</div><!-- /.container -->
<br />
