<div id="site-header-wrap">
	<!-- Header -->
	<header id="header" class="header clearfix">
		<div class="container-fluid clearfix container-width-93" id="site-header-inner">
			<div id="logo" class="logo float-right">
				<a href="index.html" title="logo">
					<img src="/Modaz/images/logo.png" alt="image" width="107" height="24" data-retina="/Modaz/images/logo@2x.png" data-width="107" data-height="24">
				</a>
			</div><!-- /.logo -->
			<div class="mobile-button"><span></span></div>
			<ul class="menu-extra">
				<li class="box-search">
					<a class="icon_search header-search-icon" href="#"></a>
					<form role="search" method="get" class="header-search-form" action="#">
						<input type="text" value="" name="s" class="header-search-field" placeholder="جستجو...">
						<button type="submit" class="header-search-submit" title="Search">جستجو</button>
					</form>
				</li>
				<li class="box-login">
					<a class="icon_login" href="/Login"></a>
				</li>
				<li class="box-cart nav-top-cart-wrapper">
					<a class="icon_cart nav-cart-trigger active" href="/UserPanel"></a>
					<div class="nav-shop-cart">
						<div class="widget_shopping_cart_content">
						</div>
					</div><!-- /.nav-shop-cart -->
				</li>
			</ul><!-- /.menu-extra -->
			<div class="nav-wrap">
				<nav id="mainnav" class="mainnav">
					<ul class="menu">
						@await Component.InvokeAsync("ProductGroupComponent")
						<li class="hidden-md-up">
							@if (User.Identity.IsAuthenticated)
							{

								<a href="#" class="btn btn-block"> @User.Identity.Name ، خوش آمدید </a>
								<a href="/UserPanel" class="btn btn-block">فاکتور جاری</a>
								<a href="/Logout" class="btn btn-block">خروج</a>
							}
							else
							{
								<a href="/Login" class="btn btn-block"> ورود </a>
								<a href="/Register" class="btn btn-block"> عضویت </a>
							}
						</li>
						<li class="hidden-sm-down">
							<a href="#">کاربران</a>
							<ul class="submenu right-submenu">
								@if (User.Identity.IsAuthenticated)
								{
									<li>
										<a href="#"> @User.Identity.Name ، خوش آمدید </a>
										<a href="/UserPanel">فاکتور جاری</a>
										<a href="/Logout">خروج</a>
									</li>
								}
								else
								{
									<li>
										<a href="/Login"> ورود </a>
										<a href="/Register"> عضویت </a>
									</li>
								}
							</ul>
						</li>
					</ul>
				</nav><!-- /.mainnav -->
			</div><!-- /.nav-wrap -->
		</div><!-- /.container-fluid -->
	</header><!-- /header -->
</div><!-- /.site-header-wrap -->
<!-- Page title -->
<div class="page-title parallax parallax1">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="page-title-heading">
					<h1 class="title">@ViewData["Title"]</h1>
				</div><!-- /.page-title-heading -->
				<div class="breadcrumbs">
					<ul>
						<li><a href="/">خانه</a></li>
						<li><a href="/Product">فروشگاه</a></li>
					</ul>
				</div><!-- /.breadcrumbs -->
			</div><!-- /.col-md-12 -->
		</div><!-- /.row -->
	</div><!-- /.container -->
</div><!-- /.page-title -->